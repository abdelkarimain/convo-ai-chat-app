<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_alignWithParentIfMissing="true"
        android:id="@+id/left_chat_view"
        android:backgroundTint="#6A3131"
        >

        <TextView
            android:id="@+id/left_chat_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_item_background"
            android:backgroundTint="#03A9F4"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/right_chat_view"
        android:backgroundTint="#6A3131"
        >

        <TextView
            android:id="@+id/right_chat_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_item_background"
            android:backgroundTint="#8BC34A"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            />
    </LinearLayout>

</RelativeLayout>