<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_alignWithParentIfMissing="true"
        android:id="@+id/left_chat_view"
        android:backgroundTint="?attr/colorPrimaryVariant"
        >

        <TextView
            android:id="@+id/left_chat_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_item_background"
            android:padding="10dp"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/right_chat_view"
        android:backgroundTint="?attr/colorPrimary"
        >

        <TextView
            android:id="@+id/right_chat_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sent_message_background"
            android:padding="10dp"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16dp"
            />
    </LinearLayout>

</RelativeLayout>